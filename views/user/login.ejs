    <main>
      <div class="login-form-div">
        <form action="/user/login" method="post">
          <fieldset class="login-form">
            <legend>Login</legend>
            <div class="form-inputs">
              <label class="login-username">
                USERNAME: <input type="text" name="username" required />
              </label>
              <label class="login-password">
                &nbsp;&nbsp;PASSWORD: <input type="password" name="password" required />
              </label>
              <div class="login-button-form"><input type="submit" value="Login" /></div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="login-movie-posters">
        <div class="poster login-barbie">
